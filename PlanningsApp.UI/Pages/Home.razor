@page "/"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Home</PageTitle>

<MudContainer Style="min-height: 75vh;" MaxWidth="MaxWidth.ExtraLarge" Class="d-flex object-center justify-center">
    <MudPaper Elevation="5" Class="d-inline-flex pa-12 flex-column align-self-center">
        <MudText Typo="Typo.h3">Welcome !</MudText>
        <MudDivider Class="mt-6 mb-9"></MudDivider>
        <MudText Typo="Typo.h6">
            Welcome to your new favorite tool for staff scheduling! <br />
            🎉 Say goodbye to spreadsheets and hello to a streamlined
            workflow.
            <br>Ready to rock your team planning? Let's get started!

        </MudText>
    </MudPaper>
</MudContainer>
